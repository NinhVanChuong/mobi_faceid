<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_department_officer" model="res.groups">
        <field name="name">User: Manage employee in department only</field>
        <field name="category_id" ref="base.module_category_human_resources_employees"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="comment">the user will have access to his department employee data.</field>
    </record>

    <record id="hr_department_officer_rule1" model="ir.rule">
        <field name="name">Department officer rule</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">[('department_id', 'in', user.employee_id.manage_department_ids.ids if user.employee_id else [0])]</field>
        <field name="groups" eval="[(4, ref('hikvision_minmoe.hr_department_officer'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="hr_department_manager_rule1" model="ir.rule">
        <field name="name">Department manager rule</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <record id="hr_department_officer_hr_attendance_rule" model="ir.rule">
        <field name="name">Department officer attendance rule</field>
        <field name="model_id" ref="model_hr_attendance"/>
        <field name="domain_force">[('department_id', 'in', user.employee_id.manage_department_ids.ids if user.employee_id else [0])]</field>
        <field name="groups" eval="[(4, ref('hikvision_minmoe.hr_department_officer'))]"/>
    </record>

    <!-- Nhóm quyền cho nhân viên -->
    <record id="group_hr_department_employee" model="res.groups">
        <field name="name">Nhân viên</field>
        <field name="category_id" ref="base.module_category_human_resources_employees"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
