<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_attendance_view_form" model="ir.ui.view">
        <field name="name">hr.employee.attendance.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="manage_department_ids" widget="many2many_tags" groups="hr.group_hr_manager" />
            </xpath>
        </field>
    </record>


</odoo>
