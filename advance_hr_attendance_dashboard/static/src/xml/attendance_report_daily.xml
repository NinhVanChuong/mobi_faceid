<?xml version="1.0" encoding="UTF-8" ?>
<template id="template" xml:space="preserve">
    <t t-name="AttendanceReportDaily" owl="1">
        <div class="o_action_manager" style="height: 100%; overflow-y:scroll" t-ref="attendance-report-daily">
            <div class="employee_dashboard">
                <div style="padding:10px;">
                    <p><h1>Báo cáo ngày</h1></p>
                </div>
                <div style="float:left; width:25%; padding:0px 10px;">
                    <form class="form-group col-6 w-auto">
                        <input type="date" style="border:1px solid #333;" id="filter_date" 
                               class="form-control" t-on-change="onChangeDate"
                               t-att-value="state.selectedDate"/>
                    </form>
                    <form class="form-group col-6 w-auto" style="margin-top: 10px;">
                        <div class="department-filter-container">
                            <label>Chọn đơn vị:</label>
                            <input type="text" 
                                   class="form-control" 
                                   placeholder="Tìm kiếm đơn vị..." 
                                   t-on-input="onSearchDepartment"
                                   style="margin-bottom: 5px;"/>
                            
                            <!-- Hiển thị các đơn vị đã chọn -->
                            <div t-if="state.selectedDepartmentNames.length > 0" style="margin-bottom: 10px;">
                                <div style="font-size: 12px; color: #666; margin-bottom: 5px;">Đã chọn:</div>
                                <div style="max-height: 100px; overflow-y: auto; border: 1px solid #ddd; padding: 5px; border-radius: 4px;">
                                    <div t-foreach="state.selectedDepartmentNames" t-as="deptName" t-key="deptName" 
                                         style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2px; padding: 2px;">
                                        <span style="font-size: 11px;" t-out="deptName"/>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                style="font-size: 10px; padding: 1px 4px;"
                                                t-on-click="() => this.onToggleDepartment(
                                                    state.departments.find(d => d.name === deptName)?.id, 
                                                    deptName
                                                )">
                                            ×
                                        </button>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                        style="font-size: 11px; margin-top: 5px;"
                                        t-on-click="onClearAllDepartments">
                                    Xóa tất cả
                                </button>
                            </div>
                            
                            <!-- Dropdown danh sách đơn vị -->
                            <div class="department-dropdown" style="position: relative;">
                                <!-- Nút chọn tất cả -->
                                <div style="padding: 10px 12px; border-bottom: 2px solid #dee2e6; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); border-radius: 4px 4px 0 0;">
                                    <div style="display: flex; align-items: center; justify-content: space-between;">
                                        <div style="display: flex; align-items: center; cursor: pointer;" t-on-click="onToggleAllDepartments">
                                            <div t-attf-style="width: 16px; height: 16px; border: 2px solid #007bff; border-radius: 3px; margin-right: 8px; display: flex; align-items: center; justify-content: center; background-color: {{ areAllDepartmentsSelected() ? '#007bff' : 'transparent' }};">
                                                <span t-if="areAllDepartmentsSelected()" style="color: white; font-size: 10px; font-weight: bold;">✓</span>
                                            </div>
                                            <span style="font-weight: 600; color: #495057; font-size: 13px;">Chọn tất cả</span>
                                        </div>
                                        <span style="font-size: 11px; color: #6c757d; background-color: #fff; padding: 2px 6px; border-radius: 10px; border: 1px solid #dee2e6;">
                                            <t t-esc="state.selectedDepartments.length"/> / <t t-esc="filteredDepartments.length"/>
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="dropdown-menu" style="display: block; position: static; width: 100%; max-height: 200px; overflow-y: auto; border: 1px solid #ddd; border-radius: 4px;">
                                    <div t-foreach="filteredDepartments" t-as="department" t-key="department.id" 
                                         class="dropdown-item" 
                                         style="padding: 10px 12px; cursor: pointer; border-bottom: 1px solid #eee; transition: background-color 0.2s ease;"
                                         t-on-click="() => this.onToggleDepartment(department.id, department.name)"
                                         t-attf-style="background-color: {{ isDepartmentSelected(department.id) ? '#e3f2fd' : '#fff' }};">
                                        <div style="display: flex; align-items: center;">
                                            <div t-attf-style="width: 14px; height: 14px; border: 2px solid #007bff; border-radius: 2px; margin-right: 8px; display: flex; align-items: center; justify-content: center; background-color: {{ isDepartmentSelected(department.id) ? '#007bff' : 'transparent' }};">
                                                <span t-if="isDepartmentSelected(department.id)" style="color: white; font-size: 8px; font-weight: bold;">✓</span>
                                            </div>
                                            <span t-out="department.name" style="font-size: 13px; color: #495057;"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <form class="form-group col-6 w-auto" style="margin-top: 10px;">
                        <label>Trạng thái:</label>
                        <div class="status-checkboxes" style="border:1px solid #333; padding: 10px; border-radius: 4px;">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status_late" value="late"
                                       t-on-change="onChangeStatus"/>
                                <label class="form-check-label" for="status_late">
                                    <span class="badge badge-warning">Muộn</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status_right_time" value="right_time"
                                       t-on-change="onChangeStatus"/>
                                <label class="form-check-label" for="status_right_time">
                                    <span class="badge badge-success">Đúng giờ</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status_time_off" value="time_off"
                                       t-on-change="onChangeStatus"/>
                                <label class="form-check-label" for="status_time_off">
                                    <span class="badge badge-info">Nghỉ phép</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status_business_trip" value="business_trip"
                                       t-on-change="onChangeStatus"/>
                                <label class="form-check-label" for="status_business_trip">
                                    <span class="badge badge-primary">Đi công tác</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="status_none" value="none"
                                       t-on-change="onChangeStatus"/>
                                <label class="form-check-label" for="status_none">
                                    <span class="badge badge-danger">Chưa điểm danh</span>
                                </label>
                            </div>
                        </div>
                    </form>
                    <div style="margin-top: 10px;">
                        <input type="text" class="form-control" placeholder="Tìm kiếm nhân viên..."
                               style="border:1px solid #333;" id="search-bar"/>
                    </div>
                    <div style="margin-top: 10px; display: flex; gap: 10px;">
                        <button type="button" t-on-click="onViewReport"
                                class="btn btn-primary view_report">
                            Xem báo cáo
                        </button>
                        <button type="button" t-on-click="_OnClickExcelReport"
                                class="btn btn-secondary export_attendance_excel_report">
                            Xuất Excel
                        </button>
                    </div>
                </div>
                <div class="attendance" style="margin-left: 27%; padding-right: 20px;">
                    <table class="table" id="attendance_report_daily">
                        <thead>
                            <tr>
                                <th style="width:20%;"><strong>Họ và tên</strong></th>
                                <th style="width:20%;"><strong>Đơn vị</strong></th>
                                <th style="width:25%;"><strong>Thời gian vào</strong></th>
                                <th style="width:15%;"><strong>Trạng thái</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="state.employeeData" t-as="employee" t-key="employee_index">
                                <td t-out="employee.name"/>
                                <td t-out="employee.department_id"/>
                                <td t-out="employee.check_in || ''"/>
                                <td>
                                    <t t-if="employee.status == 'late'">
                                        <span class="badge badge-warning">Muộn</span>
                                    </t>
                                    <t t-elif="employee.status == 'right_time'">
                                        <span class="badge badge-success">Đúng giờ</span>
                                    </t>
                                    <t t-elif="employee.status == 'time_off'">
                                        <span class="badge badge-info">Nghỉ phép</span>
                                    </t>
                                    <t t-elif="employee.status == 'business_trip'">
                                        <span class="badge badge-primary">Đi công tác</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge badge-danger">Chưa điểm danh</span>
                                    </t>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </t>
</template> 